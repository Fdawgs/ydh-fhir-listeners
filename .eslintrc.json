{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": 2015, // Rhino Engine uses ES6
		"sourceType": "script",
		"ecmaFeatures": {
			"globalReturn": true
		}
	},
	"rules": {
		"no-console": "off",
		"lines-between-class-members": "error",
		"no-multiple-empty-lines": [
			"error",
			{
				"max": 1,
				"maxBOF": 0,
				"maxEOF": 0
			}
		],
		// Mirth specific settings
		"no-var": "off",
		"no-unused-vars": "off",
		"prefer-template": "off",
		"no-undef": "off",
		// Mirth has global returns
		"consistent-return": "off",
		"eqeqeq": "off",
		"vars-on-top": "off",
		"prefer-destructuring": "off"
	}
}
