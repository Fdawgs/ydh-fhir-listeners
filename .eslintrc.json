{
    "env": {
        "es6": true
    },
    "extends": [
        "nhsuk"
    ],
    "parserOptions": {
        "ecmaVersion": 2015, // Rhino Engine uses ES6
        "sourceType": "script",
        "ecmaFeatures": {
            "globalReturn": true
        }
    },
    "rules": {
        "no-tabs": [
            "error",
            {
                "allowIndentationTabs": true
            }
        ],
        "comma-dangle": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        // Mirth specific settings
        "no-var": [
            "off"
        ],
        "no-unused-vars": [
            "off"
        ],
        "sort-keys": [
            "off"
        ],
        "prefer-template": [
            "off"
        ],
        "no-undef": [
            "off"
        ],
        // Mirth has global returns
        "consistent-return": [
            "off"
        ],
        "eqeqeq": [
            "off"
        ],
        "vars-on-top": [
            "off"
        ],
        "prefer-destructuring": [
            "off"
        ]
    }
}